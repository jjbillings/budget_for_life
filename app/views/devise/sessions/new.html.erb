<div class="container">
  <header class="header">
    <h2>Log in</h2>
  </header>
  <hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="input-box">
      <%= f.label :email, class: "input-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-text" %>
    </div>

    <div class="input-box">
      <%= f.label :password, class: "input-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-text" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="input-box">
        <%= f.check_box :remember_me, class: "input input-checkbox" %>
        <%= f.label :remember_me, class: "input-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
