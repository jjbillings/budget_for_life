<p>
  <strong>Name:</strong>
  <%= @expense.name %>
</p>

<p>
  <strong>Current Amount:</strong>
  <%= number_to_currency(@expense.current_amount) %>
</p>

<p>
  <strong>Target Amount:</strong>
  <%= number_to_currency(@expense.amount) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @expense.status %>
</p>

<%= link_to 'Edit', edit_expense_path(@expense) %> |
<%= link_to 'Back', expenses_path %>

<br/>
<hr/>

<h2><%= "Transactions for: #{@expense.name}" %></h2>
<%= render "transactions/table", transactions: @expense.transactions %>
<div align="left">
  <%= link_to 'Add Transaction', new_transaction_path(expense_id: @expense.id) %>
</div>
