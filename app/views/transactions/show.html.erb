<p>
  <strong>Amount:</strong>
  <%= @transaction.amount %>
</p>

<p>
  <strong>Description:</strong>
  <%= @transaction.description %>
</p>

<p>
  <strong>Vendor:</strong>
  <%= @transaction.vendor %>
</p>

<p>
  <strong>Account:</strong>
  <% account = current_user.accounts.find(@transaction.account_id) %>
  <%= link_to(account.name, account) %>
</p>

<p>
  <strong>Expense:</strong>
  <% expense = current_user.expenses.find(@transaction.expense_id) %>
  <%= link_to(expense.name, expense) %>
</p>

<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>
