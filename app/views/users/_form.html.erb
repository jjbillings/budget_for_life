      </div>
    <% end %>

    <div class="input-box">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "input input-text" %>
    </div>

    <div class="input-box">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "input input-text" %>
    </div>

    <div class="input-box">
      <%= form.label :email %>
      <%= form.text_field :email, class: "input input-text" %>
    </div>

    <div class="input-box">
      <%= form.label :birthdate %>
      <%= form.date_field :birthdate, class: "input input-text" %>
    </div>

    <div class="actions">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
